    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ogloszenie.Imie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ogloszenie.Imie)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ogloszenie.Rasa)
        </dt>
