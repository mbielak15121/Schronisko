@page
@model Schronisko.Pages.Zaginiecie.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Zaginiecia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Zaginiecia.Id" />
            
                <input type="hidden" asp-for="Zaginiecia.Miejsce" class="form-control" />
                
           
                <input type="hidden" asp-for="Zaginiecia.Opis" class="form-control" />
              
          
            
                <input type="hidden" asp-for="Zaginiecia.Zdjecie" class="form-control" />
             
      
           
                    <input type="hidden" class="form-check-input" asp-for="Zaginiecia.Zaakceptowane" /> 
                
       
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Zaginiecia.Aktualne" /> @Html.DisplayNameFor(model => model.Zaginiecia.Aktualne)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
